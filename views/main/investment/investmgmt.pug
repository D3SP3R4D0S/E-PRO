doctype html
include ../compara/head.pug
.wrapper
    include ../compara/sidebar
    script.
        $(document).ready(function () {
            $('#investment').addClass('active');
        });
    .main
        include ../compara/navbar
        main.content
            .container-fluid.p-0
                .row.row-cols-auto.mb-2
                    .col.ms-3
                        h1
                            strong Invest management
                        h6 투자 내역 관리
                    .col.text-end.align-self-center.ms-3
                        a.btn.btn-dark.btn-sm(href="investmentadd") Add item
                .row
                    .col
                        .card
                            .card-body
                                h3.fw-bold= "Today's dollor"
                                .row
                                    .col
                                        span= currency.name
                                    .col
                                        span= "Current : " + currency.basePrice
                                    .col
                                        span= " Ref date : " + currency.date
                                    .col
                                        span= " Provider : " + currency.provider
                .row
                    .col
                        .card
                            .card-body
                                table.table
                                    thead
                                        tr
                                            th Item
                                            th Cost
                                            th Quantity
                                            th Current price
                                            th Devidend
                                            th Gain
                                            th bougnt
                                            th datemodified
                                            th Control
                                    tbody
                                        for line in result
                                            tr
                                                td= line.item
                                                td= line.buying
                                                td= line.count
                                                if line.current
                                                    td= line.current
                                                else
                                                    td No data
                                                td
                                                    span= line.dividendo + '  '
                                                    span= line.dividend
                                                td
                                                    //@todo need to add current calculation
                                                    span Need to add
                                                if(line.boughtdate)
                                                    td= line.boughtdate.toISOString().split('T')[0]
                                                else
                                                    td No data
                                                if(line.modified)
                                                    td= line.modified.toISOString().split('T')[0]
                                                else
                                                    td No data
                                                td
                                                    form.me-auto(action="investmentedit" method="POST")
                                                        input(type="hidden" name="item" value=line.item)
                                                        input(type="hidden" name="buying" value=line.buying)
                                                        input(type="hidden" name="currency" value=line.currency)
                                                        input(type="hidden" name="count" value=line.count)
                                                        if(line.boughtdate)
                                                          input(type="hidden" name="boughtdate" value=line.boughtdate.toISOString().split('T')[0])
                                                        input(type="hidden" name="dividendo" value=line.dividendo)
                                                        input(type="hidden" name="dividend" value=line.dividend)
                                                        input.btn.btn-info.btn-sm(type="submit" value="Edit")
        include ../compara/footer.pug
    include ../compara/footer_script.pug