doctype html
include ../compara/head
.wrapper
    include ../compara/sidebar
        script.
            $(document).ready(function () {
                $('#latestdata').addClass('active');
            });
    .main
        include ../compara/navbar
        main.content
            .container-fluid.p-0
                    div(class="col-lg-12")
                        div(class='card shadow')
                            div(class='card-header py-3')
                                h6(class="m-0 font-weight-bold") Latest List
                            div(class='card-body')
                                table(class="table table-bordered table-sm")
                                    thead(class="table-dark")
                                        tr(class="text-center")
                                            th Assortment
                                            th Cost
                                            th Count
                                            th Example
                                            th Date
                                    tbody(class="text-center")
                                        for line in result
                                            tr  
                                                td= line.alligner
                                                td(class="text-right")= line.cost + 'â‚©'
                                                td= line.times
                                                td= line.detail
                                                td= line.date
                                div.text-end
                                    a.btn.btn-danger.ms-auto(href="removedata?id=" + result[0].id) Remove Data
                                    a.btn.btn-dark.ms-2(href="index") Go Back
            include ../compara/footer
    include ../compara/footer_script
