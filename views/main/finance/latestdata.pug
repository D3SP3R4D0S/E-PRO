body(id="page-top")
    div(id="wrapper")
        include ../compara/sidebar.pug
        div(id="content-wrapper" class="d-flex flex-column")
            div(id="content")
                include ../compara/topbar.pug
                div(class='container-fluid')
                    div(class="col-lg-12")
                        H2(class="m-4 text-dark") Latest List
                        div(class='card shadow')
                            div(class='card-body')
                                table(id="exampletable" class="display table table-bordered table-sm")
                                    thead(class="table-dark")
                                        tr(class="text-center")
                                            th Title
                                            th Method
                                            th Date
                                            th Subord
                                            th Cost
                                    tbody(class="text-center")
                                        for line in result
                                            tr
                                                td
                                                    a(href="detail?id="+line.id)= line.detail
                                                td= line.title
                                                td= line.date
                                                td= line.subord
                                                td(class="text-right")= line.cost.toLocaleString() + 'â‚©'
                                div(class="row")
                                    a(class="btn btn-dark text-light ml-auto mr-4" href="adddata") Add data
            include ../compara/footer.pug
    include ../compara/footer_script.pug