head
    include ../compara/head.pug
.wrapper
    include ../compara/sidebar
    script.
        $(document).ready(function () {
            $('#fixedexpense').addClass('active');
        });
    .main
        include ../compara/navbar
        main.content
            .container-fluid.p-0
                row(class="row justify-content-center")
                    H2(class="m-4 text-dark") Add Expendable purchase
                    div(class="col-12")
                        div(class='card border-0 shadow-lg')
                            div(class='card-body')
                                div(class="container col-lg-8")
                                    form(action="fixedexpensepurchaseadd" method="post")
                                        input(type="hidden" name="_csrf" value=csrfToken)
                                        table(class="table table-hover table-borderless text-center")
                                            tr
                                                th cost
                                                td
                                                    .input-group
                                                        input(class="form-control" type="number" name="cost" value=cost placeholder="cost" class="col-12" required)
                                                        span(class="input-group-text" id="basic-addon2") KRW
                                            tr
                                                th(class="col-6") detail
                                                td
                                                    input(class="form-control" type="text" name="details" value=title placeholder="details" class="col-12" readonly)
                                            tr
                                                th method
                                                td
                                                    select(class="form-control" name="title" placeholder="title" class="col-12" required)
                                                        option(value="" selected disabled hidden) Method
                                                        for line in setting.method
                                                            if(method.split(',')[0] === line)
                                                                option(value=line selected)= line
                                                            else
                                                                option(value=line)= line
                                            tr
                                                th Paid for
                                                td
                                                    select(class="form-control" name="subord" placeholder="Subord" class="col-12" required)
                                                        option(value="" selected disabled hidden) Subord
                                                        for line in setting.paidfor
                                                            if(method.split(',')[1] === line)
                                                                option(value=line selected)= line
                                                            else
                                                                option(value=line)= line
                                            tr
                                                th date
                                                td
                                                    input#dateinput(class="form-control" type="date" name="date" placeholder="date" class="col-12" required)
                                                    script.
                                                        document.getElementById('dateinput').value= new Date().toISOString().slice(0, 7);
                                                        document.getElementById('dateinput').value = new Date().toISOString().substring(0, 10);;
                                            tr
                                                th alligner
                                                td
                                                    select(class="form-control" name="alligner" placeholder="Alligner" class="col-12" required)
                                                        option(value="" selected disabled hidden) Alligner
                                                        for line in setting.alligner
                                                            if(method.split(',')[2] === line)
                                                                option(value=line selected)= line
                                                            else
                                                                option(value=line)= line
                                        div(class="row")
                                            a(class="btn btn-dark text-light col-lg-3 ml-auto m-2" href="javascript:history.back()") go back
                                            button(class="btn btn-dark text-light col-lg-3 m-2" type="submit") Submit

    include ../compara/footer_script.pug