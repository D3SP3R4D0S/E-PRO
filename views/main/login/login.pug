head
    include ../compara/head.pug
body(id="bg-gradient-dark")
    div(class="container")
        div(class="row justify-content-center")
            div(class="col-xl-10 col-lg-12 col-md-9")
                div(class="card o-hidden border-0 shadow-lg my-5")
                    div(class="card-body p-0")
                        div(class="row")
                            img(src="images/login.jpg" class="col-lg-6 d-none d-lg-block")
                            div(class="col-lg-6")
                                div(class="p-5")
                                    div(class="text-center")
                                        h1(class="h3 text-gray-900") Finence report
                                        h2(class="h6 text-gray-700 mb-4") ARCTIC DATA CENTER
                                    form(class="user")
                                        div(class="form-group")
                                            input(type="id" class="form-control form-control-user" name="id" aria-describedby="emailHelp" placeholder="id" required)
                                        div(class="form-group")
                                            input(type="password" class="form-control form-control-user" name="pw" placeholder="password" required)
                                        button(class="btn btn-primary btn-user btn-block" type="submit" formmethod="post") Login
                                    hr
                                    div(class="text-center")
                                        a(class="small" href="forgot-password.html") Forgot Password?
                                    div(class="text-center")
                                        a(class="small" href="register") Create an Account!
            include ../compara/footer.pug
    include ../compara/footer_script.pug
