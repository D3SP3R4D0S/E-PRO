head
    include ../compara/head.pug

.wrapper
    .main
        main.content
            .container.p-0
                div(class="row justify-content-center")
                    div(class="col-xl-10 col-lg-12 col-md-9")
                        div(class="card o-hidden border-0 shadow-lg my-5")
                            div(class="card-body p-0")
                                div(class="row")
                                    img(src="images/login.jpg" class="col-lg-6 d-none d-lg-block")
                                    div(class="col-lg-6")
                                        div(class="p-5")
                                            div(class="text-center")
                                                h1(class="h3 text-gray-900") REGISTER
                                                h2(class="h6 text-gray-700 mb-4") ARCTIC DATA CENTER
                                            form(class="user")
                                                input(type="hidden" name="_csrf" value=csrfToken)
                                                div(class="form-group").mb-2
                                                    input(class="form-control form-control-user" type="text" name="id" placeholder = "id" required)
                                                div(class="input-group").mb-2
                                                    input#pwd(class="form-control form-control-user" type="password" name="pw" placeholder="password" required)
                                                    button.btn.btn-primary(type="button" id="eye") Check

                                                div(class="form-group").mb-2
                                                    input(class="form-control form-control-user" type="text" name="name" placeholder="name" required)
                                                button.btn.btn-primary.mb-2.form-control(type="submit" formmethod="post") Register
                                            hr
                                            div(class="text-center")
                                                a(class="small" href="login") Back to login
        include ../compara/footer.pug
include ../compara/footer_script.pug
script.
    $('#eye').on("mousedown", function () {
        $('#pwd').attr('type', "text");
    }).on('mouseup mouseleave', function () {
        $('#pwd').attr('type', "password");
    });